<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/loginimg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:contentDescription="login"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/welcome1"></ImageView>

    <LinearLayout
        android:id="@+id/loginll"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginimg"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/outerborder"
        android:orientation="vertical">

        <EditText
            android:id="@+id/loginet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/user1"
            android:gravity="center"
            android:hint="Username"
            android:textSize="20dp"
            android:textStyle="bold"></EditText>

        <EditText
            android:id="@+id/loginet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/pass1"
            android:gravity="center"
            android:hint="Password"
            android:textSize="20dp"
            android:textStyle="bold"></EditText>

        <Button
            android:id="@+id/loginbtn1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/roundbutton"
            android:drawableLeft="@drawable/login"
            android:gravity="center"
            android:text="Login"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:tooltipText="login"></Button>
    </LinearLayout>

    <TextView
        android:id="@+id/logintv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginll"
        android:text="If you're a new user ???"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_margin="40dp"
        ></TextView>

    <Button
        android:id="@+id/loginbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Register Here !!!  "
        android:layout_toRightOf="@+id/logintv1"
        android:layout_below="@+id/loginll"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundbutton"
        android:textStyle="bold"
        ></Button>

</RelativeLayout>